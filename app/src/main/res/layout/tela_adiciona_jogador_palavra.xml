<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nome do Jogador"
        android:textSize="24dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nomeJogador"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite o nome"
        android:inputType="text"
        android:layout_marginLeft="45dp"/>



    <TextView
        android:id="@+id/textView3"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Digite suas palavras"
        android:textSize="24dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/palavra1"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Primeira palavra"
        android:inputType="text"
        android:layout_marginLeft="45dp"/>

    <EditText
        android:id="@+id/palavra2"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Segunda palavra"
        android:inputType="text"
        android:layout_marginLeft="45dp"/>
    <EditText
        android:id="@+id/palavra3"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Terceira palavra"
        android:inputType="text"
        android:layout_marginLeft="45dp"/>

    <Button
        android:id="@+id/adicionaPalavras"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="96dp"
        android:text="Adicionar" />

</LinearLayout>