<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lddm.jogoafrica.MontarEquipe">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione a quantidade de equipes"
        android:textSize="17dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.096" />

    <Spinner
        android:id="@+id/numEquipe"
        android:layout_width="146dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.084" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="290dp"
        android:layout_height="25dp"
        android:text="Quantos jogadores terÃ¡ cada equipe?"
        android:textSize="17dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/numEquipe"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.148" />

    <Spinner
        android:id="@+id/numJogador"
        android:layout_width="141dp"
        android:layout_height="52dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.004" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="214dp"
        android:layout_height="25dp"
        android:text="Insira o nome das equipes"
        android:textSize="17dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/numJogador" />

    <Button
        android:id="@+id/buttonInserir"
        android:layout_width="115dp"
        android:layout_height="37dp"
        android:text="Inserir Equipe"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.075" />

    <Button
        android:id="@+id/button3"
        android:layout_width="114dp"
        android:layout_height="43dp"
        android:text="Continuar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonInserir"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintVertical_bias="0.7" />

</android.support.constraint.ConstraintLayout>
