<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lddm.jogoafrica.BancoPalavras">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="323dp"
        android:layout_height="80dp"
        android:divider="@color/colorNames"
        android:dividerHeight="10dp"
        android:text="Caso for usar uma dessas palavras, clique nela para que nenhuma outra pessoa tenha a mesma ideia ..."
        android:textSize="17dp"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.526" />

    <ListView
        android:id="@+id/listaPalavras"
        android:layout_width="340dp"
        android:layout_height="319dp"
        android:layout_marginTop="9dp"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        tools:layout_editor_absoluteX="16dp" />
</android.support.constraint.ConstraintLayout>
