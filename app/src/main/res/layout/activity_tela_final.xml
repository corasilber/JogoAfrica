<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lddm.jogoafrica.TelaFinal">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="342dp"
        android:layout_height="76dp"
        android:text="E a equipe vencedora foi ..."
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="33dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/vencedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vencedora"
        android:textSize="42dp"
        android:layout_marginTop="47dp"
        android:textColor="@color/colorRed"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultados .."
        android:textSize="29dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/vencedor"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.045" />

    <ListView
        android:id="@+id/resultados"
        android:layout_width="265dp"
        android:layout_height="139dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <Button
        android:id="@+id/voltar"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:text="Voltar para tela inicial"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/resultados"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.578" />
</android.support.constraint.ConstraintLayout>
